<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>2.6.7</version>
        <relativePath/> <!-- lookup parent from repository -->
    </parent>

    <groupId>tgb.btc</groupId>
    <artifactId>rce</artifactId>
    <version>1.3</version>
    <name>rce</name>
    <description>rce</description>
    <packaging>jar</packaging>

    <profiles>
        <profile>
            <id>copyToServer</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.springframework.boot</groupId>
                        <artifactId>spring-boot-maven-plugin</artifactId>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <version>1.8</version>
                        <executions>
                            <execution>
                                <id>copy-to-server</id>
                                <phase>install</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <target>
                                        <property name="ssh.keyfile" value="C:\Users\User\.ssh\id_rsa"/>
                                        <!-- Check OS and set keyfile -->
                                        <condition property="ssh.keyfile" value="/home/barilo/.ssh/id_rsa" else="${ssh.keyfile}">
                                            <os family="unix"/>
                                        </condition>
                                        <scp file="target/rce.jar"
                                             todir="root@45.83.122.132:/home/rce/application"
                                             keyfile="${ssh.keyfile}"
                                             trust="true"/>
                                        <sshexec host="45.83.122.132"
                                                 username="root"
                                                 keyfile="${ssh.keyfile}"
                                                 trust="true"
                                                 command="/home/rce/application/run.sh"/>
                                    </target>
                                </configuration>
                            </execution>
                        </executions>

                    </plugin>
                </plugins>
                <finalName>rce</finalName>
            </build>
        </profile>
        <profile>
            <id>windows</id>
            <activation>
                <os>
                    <family>Windows</family>
                </os>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <version>1.8</version>
                        <executions>
                            <execution>
                                <id>pre-clean-install-windows</id>
                                <phase>initialize</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <tasks>
                                        <exec executable="mvn.cmd">
                                            <arg value="clean"/>
                                            <arg value="install"/>
                                            <arg value="-f"/>
                                            <arg value="../rce-web/pom.xml"/>
                                        </exec>
                                    </tasks>
                                </configuration>
                            </execution>
                        </executions>
                        <dependencies>
                            <dependency>
                                <groupId>org.apache.ant</groupId>
                                <artifactId>ant-jsch</artifactId>
                                <version>1.10.9</version>
                            </dependency>
                        </dependencies>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>unix</id>
            <activation>
                <os>
                    <family>unix</family>
                </os>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <version>1.8</version>
                        <executions>
                            <execution>
                                <id>pre-clean-install-windows</id>
                                <phase>initialize</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <tasks>
                                        <exec executable="mvn">
                                            <arg value="clean"/>
                                            <arg value="install"/>
                                            <arg value="-f"/>
                                            <arg value="../rce-web/pom.xml"/>
                                        </exec>
                                    </tasks>
                                </configuration>
                            </execution>
                        </executions>
                        <dependencies>
                            <dependency>
                                <groupId>org.apache.ant</groupId>
                                <artifactId>ant-jsch</artifactId>
                                <version>1.10.9</version>
                            </dependency>
                        </dependencies>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

